            <!-- Snackbar // documentation: https://www.polonel.com/snackbar/ -->
            <script>
                // for letters only
                jQuery.validator.addMethod("lettersonly", function (value, element) {
                    return this.optional(element) || /^[a-z]+$/i.test(value);
                }, "Letters only please");

                // for alphanumeric only
                jQuery.validator.addMethod("alphanumeric", function (value, element) {
                    return this.optional(element) || /^[\w.]+$/i.test(value);
                }, "Letters, numbers, and underscores only please");


                $("#register-account-form").validate({
                    rules: {
                        register_username: {
                            required: true,
                            alphanumeric: true,
                            maxlength: 10
                        },
                        register_password: {
                            required: true,
                            minlength: 8
                        },
                        register_cpassword: {
                            required: true,
                            minlength: 8,
                            equalTo: "#register_password"
                        }
                    },
                    messages: {
                        register_username: {
                            required: 'Username is Required',
                            alphanumeric: 'Only letter,underscore and numbers is allowed',
                            maxlength: 'Username should of atleast 10 character'
                        },
                        register_password: {
                            required: 'Password is required',
                            minlength: 'Password should of atleast 8 character'
                        },
                        register_cpassword: {
                            required: 'Confirmed Password is required ',
                            equalTo: 'Confirmed Password does not match.'
                        }

